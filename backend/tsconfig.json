{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 12",
   
    "compilerOptions": {
      "lib": ["es6", "es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
      "module": "commonjs",
      "target": "es6",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
    }  
  }